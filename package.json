    "WebChat",
    "Chat",
    "Browser",
    "Browser Extension",
    "Chrome",
    "Chrome Extension",
    "Firefox",
    "Firefox Extension",
    "Extension",
    "WebRTC",
    "P2P",
    "Peer to Peer"
  ],
  "author": "molvqingtai",
  "license": "MIT",
  "bugs": {
